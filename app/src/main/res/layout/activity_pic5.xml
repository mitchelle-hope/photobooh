<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".picActivity5">

  <ImageView
      android:id="@+id/imgBoondocks"
      android:layout_width="705dp"
      android:layout_height="895dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.501"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.212"
      app:srcCompat="@drawable/img_5" />

  <Button
      android:id="@+id/btnPrevious3"
      android:layout_width="275dp"
      android:layout_height="145dp"
      android:text="Previous"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.19"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvBoondocks"
      app:layout_constraintVertical_bias="0.667" />

  <TextView
      android:id="@+id/tvBoondocks"
      android:layout_width="715dp"
      android:layout_height="305dp"
      android:text="The Boondocks are one of the only animations that have been succesfull in the industry in freely speaking about hip hop culture and Black America.They have been celebrated in the past two decades for having an outstanding cast and also being able to relate with the audience."
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.484"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imgBoondocks"
      app:layout_constraintVertical_bias="0.188" />
</androidx.constraintlayout.widget.ConstraintLayout>